@model UserManagement.Models.Security.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h3>Login</h3>
    <form asp-controller="Security" asp-action="Login", method="post">
        <div asp-validation-summary="All"></div>
        <input type="text" asp-for="UserName" placeholder="User Name"/><br />
        <input type="password" asp-for="Password" placeholder="Password"/><br />
        <input type="submit" value="Login" />
    </form>
    <form asp-controller="Security" asp-action="Register", method="post">
        <input type="submit" value="Register"
    </form>
</body>
</html>
